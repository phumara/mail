# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-with-django-secret-key-generator
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Settings (PostgreSQL)
DB_NAME=mail_db
DB_USER=mail_user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Email Settings (choose your email service provider)
# For Gmail:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# For Amazon SES:
# EMAIL_BACKEND=django_ses.SESBackend
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SES_REGION_NAME=us-east-1
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# For SendGrid:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com
EMAIL_SUBJECT_PREFIX=[Mail System]
EMAIL_SENDING_RATE_LIMIT=100
EMAIL_BURST_LIMIT=10

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# Admin Settings
ADMINS=admin@yourdomain.com,Admin Name;dev@yourdomain.com,Dev Name

# Application Settings
TIME_ZONE=Asia/Bangkok
LANGUAGE_CODE=en-us